<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_vendor_bill" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <field name="check_9_digits" invisible="1"/>
                <div class="alert alert-warning fw-bold"
                     role="alert"
                     invisible="move_type not in ('in_invoice', 'in_refund') or check_9_digits != True">
                    it will be better to add last 9 digits.
                </div>
            </xpath>

        </field>
    </record>
</odoo>