<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form_add_field" model="ir.ui.view">
        <field name="name">res.config.view.add.boolean</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_payment_section']/setting[@id='iface_tipproduct']" position="after">

                <setting string="Restrict POS Session Report Printing"
                         help="Enable this option to allow all users to print the POS session report. If disabled, only admin users will have permission to print the report..">
                    <field name="allow_all_users_print_report"/>
                </setting>
            </xpath>

        </field>
    </record>
</odoo>
