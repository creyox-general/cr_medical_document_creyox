<odoo>
    <record model="ir.ui.view" id="messenger_channel_provider_line_form_view">
        <field name="name">messenger.channel.provider.line.form</field>
        <field name="model">messenger.channel.provider.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="channel_id" />
                        <field name="messenger_provider_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="messenger_channel_provider_line_list_view">
        <field name="name">messenger.channel.provider.line.list</field>
        <field name="model">messenger.channel.provider.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="channel_id" />
                <field name="messenger_provider_id" />
            </list>
        </field>
    </record>
</odoo>
