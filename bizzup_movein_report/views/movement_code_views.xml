<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="movement_code_list" model="ir.ui.view">
        <field name="name">movement.code.list</field>
        <field name="model">movement.code</field>
        <field name="groups_id" eval="[(4,ref('account.group_account_manager')), (4,ref('base.group_erp_manager'))]"/>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code" invisible="is_hrp == True"/>
                <field name="code_string" string="" invisible="is_hrp != True"/>
                <field name="is_hrp" column_invisible="True"/>
                <field name="account_move_type"/>
                <field name="journal_id"/>
                <field name="fiscal_id"/>
                <field name="means_of_payment"/>
            </list>
        </field>
    </record>

    <record id="movement_code_form" model="ir.ui.view">
        <field name="name">movement.code.form</field>
        <field name="model">movement.code</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="text-truncate w-100">
                        <h1>
                            <field name="name"
                                   placeholder="Enter Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="code" invisible="is_hrp == True"/>
                        <field name="is_hrp" invisible="1"/>
                        <field name="code_string" string="Code" invisible="is_hrp != True"/>
                        <field name="account_move_type"/>
                        <field name="journal_id" context="{'movement_id': id}"/>
                    </group>
                    <group>
                        <field name="fiscal_id" invisible="account_move_type == 'entry'"/>
                        <field name="means_of_payment" invisible="account_move_type != 'entry'"/>
                        <field name="Details"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="movement_code_menu_action" model="ir.actions.act_window">
        <field name="name">Movement Code</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">movement.code</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="bizzup_movein_report.movement_code_list"/>
    </record>

    <menuitem id="movement_code_menu"
              sequence="0"
              parent="account.menu_finance_configuration"
              name="Movement Code"
              action="bizzup_movein_report.movement_code_menu_action"/>
</odoo>
