<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="deposite_wizard_form" model="ir.ui.view">
        <field name="name">deposits.report.wizard.form</field>
        <field name="model">deposits.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="deposite_filename" invisible="1"/>
                <field name="state" invisible="1"/>
                <group invisible="state != 'choose'">
                    <group>
                        <field name="start_date"/>
                        <field name="depo_means_of_payment"/>
                    </group>
                    <group>
                        <field name="end_date"/>
                    </group>
                </group>
                <div invisible="state != 'get'">
                    <h2>Deposite Report is generated.</h2>
                    <field name="deposite_data" widget="binary" filename="deposite_filename"/>
                </div>
                <footer invisible="state != 'choose'">
                    <button type="object" name="generate_report" string="Generate" class="oe_highlight"/>
                </footer>
                <footer invisible="state != 'get'">
                    <button special="cancel" string="Close" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="deposite_report_action" model="ir.actions.act_window">
        <field name="name">Deposite Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">deposits.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="deposite_wizard_form"/>
        <field name="target">new</field>
    </record>

    <menuitem action="deposite_report_action"
              id="deposite_report_wiz"
              name="Deposite Report"
              sequence="2"
              parent="account_reports.account_reports_audit_reports_menu"/>
</odoo>