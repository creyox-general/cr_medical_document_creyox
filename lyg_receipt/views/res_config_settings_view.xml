<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_receipt" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l10n.mx
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='show_sale_receipts']" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box"
                     id="show_sale_receipts_email">
                    <div class="o_setting_left_pane">
                        <field name="send_an_email_receipts"
                               widget="upgrade_boolean"/>
                    </div>
                    <div class="o_setting_right_pane"
                         name="show_receipts_sendemail_right_pane">
                        <label for="send_an_email_receipts"/>
                        <div class="text-muted">
                            Activate to send a receipt to customers
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>