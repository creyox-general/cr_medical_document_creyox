<?xml version="1.0"?>
<odoo>
    <data>
        <record id="receipt_register_payment_account_invoice"
                model="ir.ui.view">
            <field name="name">account.move.receipt</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_reference']" position="after">
                    <field name="code" invisible="1"/>
                </xpath>
                <xpath expr="//button[@id='account_invoice_payment_btn']" position="replace">
                </xpath>
                <xpath expr="//button[@id='account_invoice_payment_secondary_btn']" position="replace">
                </xpath>
            </field>
        </record>
    </data>
    <record id="view_move_form_inherit_receipt" model="ir.ui.view">
        <field name="name">account.move.form.inherit.receipt</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_invoice_create_receipt"
                        type="object"
                        class="btn btn-primary"
                        string="Create A New Receipt"
                        invisible="state != 'posted'"/>
            </header>
        </field>
    </record>
</odoo>
