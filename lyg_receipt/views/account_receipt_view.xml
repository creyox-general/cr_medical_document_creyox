<?xml version="1.0"?>
<odoo>
    <!-- Form view of HMK - Receipt-->
    <record id="view_account_receipt_form" model="ir.ui.view">
        <field name="name">lyg.account.receipt.form</field>
        <field name="model">lyg.account.receipt</field>
        <field name="arch" type="xml">
            <form string="Receipt">
                <header>
                    <button string="Post" class="oe_highlight" invisible="state != 'draft'"
                            name="action_post_receipt" type="object"/>
                    <button name="preview_receipt" type="object"
                            string="Preview" data-hotkey="o" title="Preview"/>
                    <button name="action_send_receipt" invisible="state != 'post'"
                            type="object" string="Send By Email"
                            data-hotkey="o" title="Send By Email"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirm,post"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="button_open_payments" type="object"
                                class="oe_stat_button" icon="fa-dollar"
                                invisible="state == 'draft'">
                            <field name="payment_count"/>
                            <span invisible="payment_count &gt; 1">Payment</span>
                            <span invisible="payment_count &lt; 1">Payments</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"
                                   readonly="state == 'post'"/>
                            <field name="company_id" invisible="1"/>
                            <field name="subject"
                                   readonly="state == 'post'"
                                   placeholder="Monthly Subscription"/>
                            <field name="receipt_user_id"
                                   readonly="state == 'post'"/>
                            <field name="currency_code" invisible="1"/>
                        </group>
                        <group>
                            <field name="date" readonly="state == 'post'"/>
                            <field name="currency_id" options="{'no_create': True, 'no_open': True}" groups="base.group_multi_currency"/>
                            <field name="remain_amount" invisible="1"/>
                            <field name="is_donation"
                                   readonly="state == 'post'"/>
                            <field name="donation_text"
                                   invisible="is_donation != True"
                                   readonly="state == 'post'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Payment Lines" name="payment_lines">
                            <field name="receipt_line_ids" readonly="state != 'draft'">
                                <list>
                                    <field name="withholding_tax_process" invisible="1"/>
                                    <field name="journal_id"/>
                                    <field name="means_of_payment"/>
                                    <field name="type"/>
                                    <field name="invoice_id"/>
                                    <field name="invoice_amount"/>
                                    <field name="withholding_amount" invisible="withholding_tax_process == False"/>
                                    <field name="amount"/>
                                    <field name="currency_id" invisible="1"/>
                                </list>
                            </field>
                            <field name="note" class="oe_inline"
                                   readonly="state == 'post'"/>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_pay_amount"/>
                                <field name="payment_diff_tax_writeoff"
                                       invisible="payment_diff_tax_writeoff &lt; 0.0"/>

                                <field name="total_ils" invisible="currency_code == 'ILS'"/>
                            </group>
                        </page>
                        <page string="Advance Settings" name="adv_settings">
                            <group>
                                <group>
                                    <field name="receipt_restrict_mode_hash_table"/>
                                    <field name="receipt_inalterable_hash"
                                           groups="base.group_no_one"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
                <!-- Chatter -->
<!--                <div class="oe_chatter">-->
<!--                    <field name="message_follower_ids"-->
<!--                           groups="base.group_user"/>-->
<!--                    <field name="activity_ids"/>-->
<!--                    <field name="message_ids"/>-->
<!--                </div>-->
            </form>
        </field>
    </record>
    <!-- Tree view of HMK - Receipt-->
    <record id="view_account_receipt_list" model="ir.ui.view">
        <field name="name">lyg.account.receipt.list</field>
        <field name="model">lyg.account.receipt</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="receipt_user_id"/>
                <field name="date"/>
                <field name="state"/>
                <field name="total_pay_amount"/>
            </list>
        </field>
    </record>
    <!-- Action view of HMK - Receipt-->
    <record id="action_account_receipt_form" model="ir.actions.act_window">
        <field name="name">Receipt</field>
        <field name="res_model">lyg.account.receipt</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_account_receipt_list"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new Receipt
            </p>
        </field>
    </record>
    <!-- Menu of HMK - Receipt-->
    <menuitem id="menu_account_receipt"
              parent="account.menu_finance_receivables"
              sequence="3" action="action_account_receipt_form"
              name="Receipt"/>

    <record id="view_account_receipt_line_form" model="ir.ui.view">
        <field name="name">lyg.account.receipt.line.form</field>
        <field name="model">lyg.account.receipt.line</field>
        <field name="arch" type="xml">
            <form string="Receipt Lines">
                <group>
                    <group>
                        <field name="withholding_tax_process" invisible="1"/>
                        <field name="journal_id"
                               domain="[('type', 'in', ('bank', 'cash'))]"
                               required="1"/>
                        <field name="means_of_payment"/>
                        <field name="type" widget="radio"/>
                        <field name="invoice_id"
                               context="{'receipt_invoice_filter': True,'lyg_receipt_partner_id':parent.partner_id}"
                               invisible="type == 'generic'"
                               required="type == 'invoice'"
                               domain="[('payment_state', 'in', ('not_paid','partial')),('amount_residual','!=',0), ('name', 'not ilike', 'HMK')]"
                               options="{'no_create': True, 'no_create_edit':True}"/>
                        <field name="invoice_amount" readonly="1" force_save="1"
                               invisible="type == 'generic'"/>
                        <field name="amount"/>
                        <field name="withholding_amount"
                              invisible="withholding_tax_process == False"/>
                    </group>
                    <group>
                        <field name="currency_id" invisible="1"/>
                        <field name="bank_id" required="means_of_payment == '2'"/>
                        <field name="branch" required="means_of_payment == '2'"/>
                        <field name="credit_account_no" required="means_of_payment == '2'"/>
                        <field name="voucher_check_no" required="means_of_payment == '2'"/>
                        <field name="validity_date"/>
                    </group>
                </group>
            </form>
        </field>
    </record>
</odoo>
