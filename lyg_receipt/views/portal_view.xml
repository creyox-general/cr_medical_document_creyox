<odoo>
    <template id="portal_my_home_menu_receipt"
              name="Portal layout : receipt menu entries"
              inherit_id="portal.portal_breadcrumbs" priority="100">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'receipt'"
                t-attf-class="breadcrumb-item #{'active ' if not receipt else ''}">
                <a t-if="receipt" t-attf-href="/my/receipt?{{ keep_query() }}">
                    Receipt
                </a>
                <t t-else="">Receipt</t>
            </li>
        </xpath>
    </template>
    <template id="portal_my_home_receipt" name="Show Receipt"
              inherit_id="portal.portal_my_home" customize_show="True"
              priority="100">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/lyg_receipt/static/src/img/icons8-receipt-64.png'"/>
                <t t-set="title">Receipts</t>
                <t t-set="text">Follow, download your receipts</t>
                <t t-set="url" t-value="'/my/receipt'"/>
                <t t-set="placeholder_count" t-value="'receipt_count'"/>
                <t t-set="config_card" t-value="True"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_receipts" name="My Receipts">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Receipts</t>
            </t>
            <t t-if="not receipts">
                <p>There are currently no receipts for your account.</p>
            </t>
            <t t-if="receipts" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Receipts #</th>
                        <th>Date of Documents</th>
                        <th>Type</th>
                        <th class="text-right">Amount</th>
                        <th name="status">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="receipts" t-as="receipt">
                        <tr>
                            <td>
                                <a t-att-href="receipt.get_portal_url()"
                                   t-att-title="receipt.name">
                                    <t t-esc="receipt.name"/>
                                </a>
                            </td>
                            <td>
                                <span t-field="receipt.date"/>
                            </td>
                            <td>
                                <span t-field="receipt.type"/>
                            </td>
                            <td class="text-right">
                                <span t-field="receipt.total_pay_amount"/>
                            </td>
                            <td name="receipt_status">
                                <t t-if="receipt.state == 'post'">
                                    <span class="badge rounded-pill text-bg-success">
                                        <span class="d-none d-md-inline">
                                            Posted
                                        </span>
                                    </span>
                                </t>
                                <t t-else="">
                                    <span class="badge rounded-pill text-bg-primary">
                                        <span class="d-none d-md-inline">
                                            Draft
                                        </span>
                                    </span>
                                </t>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </t>
        </t>
    </template>
    <template id="portal_receipt_page" name="Receipt Portal Template"
              inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t t-set="o_portal_fullwidth_alert"
               groups="account.group_account_invoice,account.group_account_readonly">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url"
                       t-value="'/web#model=%s&amp;id=%s&amp;action=%s&amp;view_type=form' % (receipt._name, receipt.id, receipt.env.ref('lyg_receipt.action_account_receipt_form').id)"/>
                </t>
            </t>

            <div class="row o_portal_invoice_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-4 col-xxl-3 d-print-none'"/>
                    <t t-set="title">
                        <h2 class="mb-0 text-break mx-auto">
                            <b t-field="receipt.total_pay_amount"/>
                        </h2>
                    </t>

                    <t t-set="entries">
                        <div class="d-flex flex-column gap-4 mt-3">
                            <div class="d-flex flex-column gap-2">
                                <div class="o_download_pdf d-flex flex-lg-column flex-xl-row flex-wrap gap-2">
                                    <a class="btn btn-light o_download_btn flex-grow-1" t-att-href="receipt.get_portal_url(report_type='pdf', download=True)" title="Download" role="button">
                                        <i class="fa fa-download"/> Download
                                    </a>
                                </div>
                            </div>
                            <div class="d-flex flex-column gap-2">
                                <div class="o_download_pdf d-flex flex-lg-column flex-xl-row flex-wrap gap-2">
                                    <a class="btn btn-light o_download_btn flex-grow-1" t-att-href="receipt.get_portal_url(report_type='pdf')" title="Print" role="button" style="background-color: #714B67 !important;">
                                        <i class="fa fa-print"/> Print
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div t-if="receipt.receipt_user_id" class="flex-grow-1">
                            <h6>
                                <small class="text-muted">
                                    <t>
                                        Salesperson
                                    </t>
                                </small>
                            </h6>
                        </div>
                        <div t-if="receipt.receipt_user_id">
                            <t t-call="portal.portal_my_contact">
                                <t t-set="_contactAvatar" t-value="image_data_uri(receipt.receipt_user_id.avatar_128)"/>
                                <t t-set="_contactName" t-value="receipt.receipt_user_id.name"/>
                                <t t-set="_contactLink" t-value="True"/>
                                <div t-field="receipt.receipt_user_id" t-options='{"widget": "contact", "fields": ["city", "phone"]}'/>
                            </t>
                        </div>
                    </t>
                </t>

                <!-- Page Content -->
                <div id="invoice_content" class="col-12 col-lg">
                    <t t-if="error or warning"
                       t-call="lyg_receipt.portal_receipt_error"/>
                    <t t-if="success and (not error and not warning)"
                       t-call="lyg_receipt.portal_receipt_success"/>

                    <div class="o_portal_html_view shadow p-3">
<!--                        <div class="o_portal_html_loader text-center">-->
<!--                            <i class="fa fa-circle-o-notch fa-spin fa-2x fa-fw text-black-50"></i>-->
<!--                        </div>-->
                        <iframe id="invoice_html" width="100%" height="100%"
                                frameborder="0"
                                t-att-src="receipt.get_portal_url(report_type='html')"/>
                    </div>
                    <!-- chatter -->
                    <div id="receipt_communication" class="mt-4">
                        <h2>History</h2>
                        <t t-call="portal.message_thread">
                            <t t-set="object" t-value="receipt"/>
                        </t>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <template id="portal_receipt_error" name="Receipt error/warning display">
        <div class="row mr16">
            <div t-attf-class="'col-lg-12 mr16 ml16 alert alert-dismissable' #{'alert-danger' if error else 'alert-warning'}"
                 role="alert">
                <a href="#" class="close" data-dismiss="alert"
                   aria-label="close" title="close">×
                </a>
                <t t-if="error == 'generic'" name="generic">
                    There was an error processing this page.
                </t>
            </div>
        </div>
    </template>

    <template id="portal_receipt_success" name="Receipt success display">
        <div class="row mr16">
            <div class="col-lg-12 mr16 ml16 alert alert-dismissable alert-success"
                 role="status">
                <a href="#" class="close" data-dismiss="alert"
                   aria-label="close" title="close">×
                </a>
            </div>
        </div>
    </template>
</odoo>