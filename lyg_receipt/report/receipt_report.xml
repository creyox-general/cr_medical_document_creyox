<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_receipt_document">
            <t t-call="web.external_layout">
                <t t-set="doc"
                   t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                <div style="position: relative; left: 10px; bottom : 10px;" class="text-end">
                    <t t-set="address" class="text-end">
                        <div t-field="doc.sudo().partner_id" style="position: relative; left: 10px; bottom : 46px;" class="text-end"
                             t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                        <p t-if="doc.sudo().partner_id.vat" style="position: relative; left: 15px; bottom : 45px;" class="text-end">
                            <t t-esc="doc.sudo().company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>
                            :
                            <span t-field="doc.sudo().partner_id.vat"/>
                        </p>
                    </t>
                </div>
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="mt16" name="subject" t-if="doc.sudo().subject">
                        <strong>Subject:</strong>
                        <p class="m-0" t-field="doc.sudo().subject"/>
                    </div>
                    <h2 class="mt16">
                        <strong>Receipt:</strong>
                        <span t-field="doc.sudo().name"/>
                    </h2>
                </div>
                <div class="row mt32 mb32" id="informations">
                    <div class="col-auto col-3 mw-100 mb-2"
                         t-if="doc.sudo().date">
                        <strong>Date of Document:</strong>
                        <p class="m-0" t-field="doc.sudo().date"/>
                    </div>
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Printing Date:</strong>
                        <p t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')"/>
                    </div>
                    <div class="col-auto col-3 mw-100 mb-2"
                         t-if="doc.sudo().invoice_id">
                        <strong>For Invoice Number:</strong>
                        <p class="m-0" t-field="doc.sudo().invoice_id.name"/>
                    </div>
                </div>
                <table style="position: relative; right: 6px;">
                    <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                    <thead style="display: table-row-group">
                        <tr width="100%">
                            <th class="text-left" name="th_journal"
                                width="10%">Journal
                            </th>
                            <th class="text-center" name="th_type" width="15%">
                                Type
                            </th>
                            <th class="text-center" name="th_type" width="15%">
                                Invoice No.
                            </th>
                            <th class="text-center" name="th_credit_acc"
                                width="15%">Credit/Acc No.
                            </th>
                            <th name="th_branch" width="15%">Branch</th>
                            <th name="th_bank" width="15%">Bank</th>
                            <th class="text-center" name="th_vc" width="15">
                                Voucher/Check No.
                            </th>
                            <th class="text-center" name="th_date" width="5%">
                                Validity Date
                            </th>
                            <th class="text-center" name="th_date" width="5%">
                                Withholding Amount
                            </th>
                            <th class="text-right" name="th_amount" width="5%">
                                Total
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-as="line" t-foreach="doc.sudo().receipt_line_ids">
                            <tr>
                                <td>
                                    <span t-esc="line.sudo().journal_id.name"/>
                                </td>
                                <td class="text-center">
                                        <span t-esc="dict(line._fields['type'].selection).get(doc.type)"/>
                                </td>
                                <td class="text-center">
                                    <span t-esc="line.sudo().invoice_id.name"/>
                                </td>
                                <td class="text-center">
                                    <span t-esc="line.credit_account_no"/>
                                </td>
                                <td class="text-center">
                                    <span t-esc="line.branch"/>
                                </td>
                                <td class="text-center">
                                    <span t-esc="line.bank_id.name"/>
                                </td>
                                <td class="text-center">
                                    <span t-esc="line.voucher_check_no"/>
                                </td>
                                <td class="text-center">
                                    <span t-esc="line.validity_date"/>
                                </td>
<!--                                <td class="text-center"-->
<!--                                    t-if="line.withholding_tax_process">-->
<!--                                    <span t-esc="line.withholding_amount"/>-->
<!--                                </td>-->
                                <td class="text-center">
                                    <span t-esc="line.withholding_amount"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="line.amount"
                                          t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <div class="clearfix" name="so_total_summary" >
                    <div class="row" id="total" name="total">
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                            <table class="table table-sm" style="position: relative; right: 6px;">
                                <tr>
                                    <td name="td_amount_untaxed_label">
                                        <strong>Subtotal Paid</strong>
                                    </td>
                                    <td class="text-right" name="td_amount_untaxed">
                                        <!--Ticket : HT01781 -->
                                        <span t-esc="doc.sudo().total_pay_amount"/>
                                    </td>
                                </tr>

                                <tr t-if="doc.company_id.withholding_tax_process">
                                    <td name="td_amount_total_label">
                                        <strong>Tax Deducted at source</strong>
                                    </td>
                                    <td class="text-right" name="td_amount_total">
                                        <span t-esc="doc.sudo().payment_diff_tax_writeoff"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td name="td_amount_total_label">
                                        <strong>Total Amount</strong>
                                    </td>
                                    <td class="text-right" name="td_amount_total">
                                        <span t-esc="round(doc.sudo().total_pay_amount + doc.sudo().payment_diff_tax_writeoff, 2)"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <p t-if="doc.sudo().is_donation">
                    <b>Donation Receipt:</b>
                    <p t-field="doc.sudo().donation_text"/>
                </p>
                <p t-field="doc.sudo().note"/>
            </t>
        </template>
        <template id="report_receipt">
            <t t-call="web.html_container">
                <t t-as="doc" t-foreach="docs">
                    <t t-call="lyg_receipt.report_receipt_document"
                       t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>
        <record id="action_report_receipt" model="ir.actions.report">
            <field name="name">Receipt</field>
            <field name="model">lyg.account.receipt</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">lyg_receipt.report_receipt</field>
            <field name="report_file">lyg_receipt.report_receipt</field>
            <field name="attachment_use">True</field>
            <field name="attachment">((object.name)+'.pdf')</field>
            <field name="print_report_name">
                (object._get_report_base_filename())
            </field>
            <field name="binding_model_id" ref="model_lyg_account_receipt"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>