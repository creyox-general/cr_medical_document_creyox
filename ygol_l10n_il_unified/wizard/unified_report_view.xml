<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_l10n_il_unified_report_form" model="ir.ui.view">
        <field name="name">view.l10n_il.unified.report.form</field>
        <field name="model">l10n_il.unified.report</field>
        <field name="arch" type="xml">
            <form>
                <field name="state" invisible="1" />
                <field name="extraction_filename" invisible="1" />
                <field name="extraction_summary_filename" invisible="1" />
                <field name="unified_report_summary_filename" invisible="1" />
                <group invisible="state != 'choose'">
                    <group>
                        <field name="date_from" required="True" />
                    </group>
                    <group>
                        <field name="date_to" required="True" />
                    </group>
                </group>
                <div invisible="state != 'get'">
                    <h2>Unified report generated.</h2>
                    <p><field
                            name="extraction_summary_data"
                            filename="extraction_summary_filename"
                        /></p>
                    <p><field
                            name="extraction_data"
                            filename="extraction_filename"
                        /></p>
                    <p><field
                            name="unified_report_2_6_data"
                            filename="unified_report_summary_filename"
                        /></p>
                </div>
                <footer invisible="state != 'choose'">
                    <button
                        type="object"
                        name="generate"
                        string="Generate"
                        class="oe_highlight"
                    />
                </footer>
                <footer invisible="state != 'get'">
                    <button
                        special="cancel"
                        string="Close"
                        type="object"
                        class="btn-primary"
                    />
                </footer>
            </form>
        </field>
    </record>

    <record id="ygol_l10n_il_unified_report_action" model="ir.actions.act_window">
        <field name="name">Unified Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n_il.unified.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_l10n_il_unified_report_form" />
        <field name="target">new</field>
    </record>

    <menuitem
        action="ygol_l10n_il_unified_report_action"
        id="ygol_l10n_il_unified_report_wiz"
        name="Unified Report"
        sequence="20"
        parent="account.account_reports_management_menu"
    />
</odoo>
