<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_move_form_unified" model="ir.ui.view">
        <field name="name">l10n_ae.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='journal_div']" position="after">
                <field
                    name="transaction_type_document_out_invoice"
                    invisible="is_hmk == True or move_type not in ('out_invoice', 'out_refund')"
                    required="move_type in ('out_invoice', 'out_refund')"
                />
                <field
                    name="transaction_type_document_in_invoice"
                    invisible="is_hmk == True or move_type not in ('in_invoice', 'in_refund')"
                    required="move_type in ('in_invoice', 'in_refund')"
                />

                <field
                    name="palestinian_invoice_number"
                    invisible="transaction_type_document_out_invoice not in ['I', 'Y']"
                />
                <field
                    name="import_note_number"
                    invisible="transaction_type_document_in_invoice != 'R'"
                />
            </xpath>
        </field>
    </record>
    <record id="account.menu_action_account_payments_receivable" model="ir.ui.menu">
        <field
            name="parent_id"
        />
    </record>
</odoo>
