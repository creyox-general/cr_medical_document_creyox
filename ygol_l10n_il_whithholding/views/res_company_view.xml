<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_company_form_l10n_il_withhlding" model="ir.ui.view">
            <field name="name">l10n_il.withholding.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id"
                   ref="l10n_il_lyg.view_company_form_l10n_il"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='l10n_il_withh_tax_id_number']"
                       position="after">
                    <field name="withholding_tax_process" readonly="1"/>
                    <field name="def_withholding_tax_rate" invisible="withholding_tax_process != True"/>
                    <field name="withholding_tax_account_id" invisible="1"/>
                    <field name="cust_withholding_tax_account_id"
                           invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
