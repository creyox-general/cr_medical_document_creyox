<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_withholding" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l10n.mx
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//t[1]" position="after">
                <h2>Default Accounts for Withholding</h2>
                <div class="row mt16 o_settings_container"
                     id="default_accounts_withholding">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div>
                                    <span class="o_form_label">The following
                                        default accounts are used for
                                        withholding process:
                                    </span>
                                </div>
                                <div class="row mt8">
                                    <label for="withholding_tax_account_id"
                                           class="col-lg-5 o_light_label"/>
                                    <field name="withholding_tax_account_id"/>
                                    <label for="cust_withholding_tax_account_id"
                                           class="col-lg-5 o_light_label"/>
                                    <field name="cust_withholding_tax_account_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
            <!--			<xpath expr="//div[@id='default_accounts']/div[2]/div[hasclass('o_setting_right_pane')]/div[hasclass('content-group')]/div[4]" position="after">-->
            <!--				<div class="row mt8">-->
            <!--                    <label for="withholding_tax_account_id" class="col-lg-5 o_light_label"/>-->
            <!--                    <field name="withholding_tax_account_id"/>-->
            <!--                </div>-->
            <!--			</xpath>-->
        </field>
    </record>
</odoo>