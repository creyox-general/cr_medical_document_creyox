<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_account_payment_form_withholding" model="ir.ui.view">
        <field name="name">account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="before">
                <field name="withholding_tax_process" invisible="1"/>
                <field name="withtholding_amount" invisible="withholding_tax_process == False or withtholding_amount &lt;= 0.0" readonly="1" force_save="1"/>
                <field name="amount_after_withholding"
                       invisible="withholding_tax_process == False"
                       readonly="1" force_save="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_payment_search_inherit_withholding"
            model="ir.ui.view">
        <field name="name">account.payment.search.inherit.withholding</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='company']" position="after">
                <separator/>
                <filter string="Withholding Amount" name="withtholding_amount"
                        domain="[]"
                        context="{'group_by': 'withtholding_amount'}"/>
                <filter string="Amount After Withholding"
                        name="amount_after_withholding" domain="[]"
                        context="{'group_by': 'amount_after_withholding'}"/>
                <separator/>
            </xpath>
        </field>
    </record>

    <record id="view_account_payment_tree_inherit_withholding"
            model="ir.ui.view">
        <field name="name">account.payment.tree.inherit.withholding</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="withtholding_amount"/>
                <field name="amount_after_withholding"/>
            </field>
        </field>
    </record>
</odoo>