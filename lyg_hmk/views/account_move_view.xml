<?xml version="1.0"?>
<odoo>
    <data>
        <record id="account_invoice_view_form_hmk_payment" model="ir.ui.view">
            <field name="name">account.move.view.form.hmk.payment</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='journal_div']" position="after">
                    <field name="withholding_tax_process" invisible="1"/>
                    <field name="withholding_amount" invisible="is_hmk == False or move_type != 'out_invoice' or withholding_tax_process == False"/>
                    <field name="is_hmk" invisible="1"/>
                    <field name="remain_amount_hmk" invisible="1"/>
                </xpath>
                <xpath expr="//page[@id='invoice_tab']/group" position="after">
                    <label class="o_form_label" for="payment_lines" string="Payment Lines" invisible="is_hmk == False or move_type != 'out_invoice'"/>
                    <field name="payment_lines" invisible="is_hmk == False or move_type != 'out_invoice'" context="{'amount': remain_amount_hmk}">
                        <list editable="bottom">
                            <field name="journal_id" domain="[('type', 'in', ('bank', 'cash'))]" required="True"/>
                            <field name="means_of_payment"/>
                            <field name="bank_id" required="means_of_payment == '2'"/>
                            <field name="branch" required="means_of_payment == '2'"/>
                            <field name="credit_account_no" required="means_of_payment == '2'"/>
                            <field name="voucher_check_no" required="means_of_payment == '2'"/>
                            <field name="validity_date"/>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                        </list>
                    </field>
                    <group class="oe_subtotal_footer oe_right">
                        <field name="total_pay_amount" invisible="is_hmk == False or move_type != 'out_invoice'"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Inherited Action of Invoice menu-->
        <record id="account.action_move_out_invoice_type" model="ir.actions.act_window">
            <field name="domain">[('move_type', '=', 'out_invoice'), ('is_hmk', '!=', True)]</field>
        </record>

        <!-- New Action for HMK menu -->
        <record id="action_invoice_type_hmk" model="ir.actions.act_window">
            <field name="name">HMK</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="view_id" ref="account.view_out_invoice_tree"/>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="domain">[('move_type', '=', 'out_invoice'), ('is_hmk', '=', True)]</field>
            <field name="context">{
                'default_move_type': 'out_invoice',
                'default_is_hmk': True,
                }
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a customer invoice
                </p>
                <p>
                    Create invoices, register payments and keep track of the discussions with your customers.
                </p>
            </field>
        </record>

        <!-- New Menu for HMK -->
        <menuitem id="menu_action_invoice_type_hmk" parent="account.menu_finance_receivables"
                  action="action_invoice_type_hmk" sequence="1"/>
    </data>
</odoo>