<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_add_field" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.add_field</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='fiscal_localization_setting_container']" position="inside">
                <setting string="Validation Masav" id="validation_masav"
                         help="If Validation Masav selected then all the masav related fields contain validation.">
                    <field name="is_validation_masav"/>
                </setting>
                <setting string="Account Status: Paid"
                         help="If this flag is selected, the Masav report will include only payments in the 'Paid' state.">
                    <field name="is_account_paid"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>