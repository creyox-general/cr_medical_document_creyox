<odoo>
    <data>
        <record id="email_template_certificate_reminder" model="mail.template">
            <field name="name">Certificate Expiration Reminder</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="email_from">${(user.email or '')|safe}</field>
            <field name="email_to">${object.work_email}</field>
            <field name="subject">Certificate Expiration Reminder</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p>
                        Dear <t t-out="object.name"/>,
                    </p>
                    <div>
                        <p>
                            This is a reminder that your Medical Certificate
                            <b>
                                <t t-out="ctx.get('certificate').name"/>
                            </b>
                            is expiring on
                            <b>
                                <t t-out="ctx.get('certificate').expiration_date"/>
                            </b>.
                            Please donâ€™t miss renewing it.
                        </p>
                    </div>
                    <p>
                        If you have any questions, please Contact Us.
                    </p>
                    Regards,
                    <br/>
                    <t t-out="user.name or ''"/>
                </div>
            </field>
        </record>
    </data>
</odoo>
