<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="private_insurance_view_tree" model="ir.ui.view">
        <field name="name">private.insurance.view.tree</field>
        <field name="model">private.insurance</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="tag" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </list>
        </field>
    </record>

    <record id="private_insurance_view_form" model="ir.ui.view">
        <field name="name">private.insurance.view.form</field>
        <field name="model">private.insurance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="tag" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_private_insurance" model="ir.actions.act_window">
        <field name="name">Private Insurance</field>
        <field name="res_model">private.insurance</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem name="Private Insurance"
              id="private_insurance_menu"
              parent="contacts.menu_contacts"
              action="action_private_insurance"
              sequence="23"/>

</odoo>