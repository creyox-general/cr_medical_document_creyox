<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_account_journal_form_inherit_lyg" model="ir.ui.view">
            <field name="name">account.journal.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <field name="restrict_mode_hash_table" position="after">
                    <field name="is_l10n_installed" invisible="1"/>
                </field>
                <field name="restrict_mode_hash_table" position="attributes">
                  <attribute name="invisible">type in ['bank', 'cash']</attribute>
                  <attribute name="invisible">is_l10n_installed == True</attribute>
                </field>
            </field>
        </record>
</odoo>
