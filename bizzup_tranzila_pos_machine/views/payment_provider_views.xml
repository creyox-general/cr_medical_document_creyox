<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherited Payment Acquirer for Tranzila-->
    <record id="payment_provider_form_inherit_tranzila_physical_terminal" model="ir.ui.view">
        <field name="name">Tranzila Provider Form Tranzila Physical Terminal</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='provider_token_credentials']" position="after">
                <page name="tranzila_physical_terminals" string="Tranzila Physical Terminals"
                      invisible="code != 'tranzila'">
                    <field name="tranzila_terminal_ids" widget="section_and_note_one2many"/>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
