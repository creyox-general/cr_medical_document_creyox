<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pcn_report_wizard_form_view" model="ir.ui.view">
        <field name="name">pcn.report.wizard.form.view</field>
        <field name="model">pcn.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="pcn_filename" invisible="1"/>
                <field name="state" invisible="1"/>
                <group invisible="state != 'choose'">
                    <group>
                        <field name="start_date"/>
                    </group>
                    <group>
                        <field name="end_date"/>
                    </group>
                </group>
                <group invisible="state != 'choose'">
                    <group>
                        <field name="is_pcn_test_report"/>
                    </group>
                    <group>
                        <field name="run_date" placeholder="Enter date in MM-YYYY format"/>
                    </group>
                </group>
                <div invisible="state != 'get'">
                    <h2>PCN Report is generated.</h2>
                    <field name="pcn_data" widget="binary"
                           filename="pcn_filename"/>
                </div>
                <footer invisible="state != 'choose'">
                    <button type="object" name="generate" string="Generate"
                            class="oe_highlight"/>
                </footer>
                <footer invisible="state != 'get'">
                    <button special="cancel" string="Close" type="object"
                            class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="pcn_report_action" model="ir.actions.act_window">
        <field name="name">PCN Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pcn.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="pcn_report_wizard_form_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="pcn_report_wiz_menu" name="PCN Report"
              action="pcn_report_action"
              parent="account.account_reports_legal_statements_menu"/>
</odoo>